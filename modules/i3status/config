general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "disk /"
order += "wireless wlp2s0"
order += "ethernet enp1s0f0"
order += "path_exists VPN"
order += "battery 0"
order += "tztime local"

disk "/" {
    format = "%free"
}

wireless wlp2s0 {
    format_up = "Wi-Fi: %essid, %bitrate"
    format_down = "Wi-Fi: disconnected"
}

ethernet enp1s0f0 {
    format_up = "Ethernet: %ip, %quality"
    format_down = "Ethernet: disconnected"
}

battery 0 {
    format = "Battery: %percentage"
    format_down = "No battery"
    status_chr = "Charging"
    status_bat = "Battery"
    status_unk = "Unknown"
    status_full = "Fully charged"
    status_idle = "Idle"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

path_exists VPN {
    path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
    format = "%A, %b %d | %I:%M %p"
    timezone = "Europe/Brussels"
}
