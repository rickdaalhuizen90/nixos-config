{
  "$schema": "https://opencode.ai/config.json",
  "model": "openrouter/deepseek/deepseek-v3",
  "small_model": "openrouter/qwen/qwen-3-coder-next",
  "theme": "system",
  "instructions": [ "CONVENTIONS.md", "docs/*.md" ],
   "autoupdate": false,
  "provider": {
    "openrouter": {
      "models": {
        "deepseek/deepseek-v3.2": {},
        "openrouter/qwen/qwen-3-coder-next": {},
        "google/gemini-3-flash-preview": {}
      }
    }
  },
  "agent": {
    "plan": {
      "description": "Restricted planning agent for architectural analysis",
      "model": "openrouter/moonshot/kimi-k2.5",
      "temperature": 0.1,
      "maxTokens": 4096
    },
    "build": {
      "description": "Primary development agent with full tool access",
      "model": "openrouter/deepseek/deepseek-v3.2",
      "temperature": 0,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "explore": {
      "description": "High-context subagent for codebase discovery",
      "mode": "subagent",
      "model": "openrouter/google/gemini-3-flash-preview",
      "temperature": 0.1,
      "maxTokens": 16384
    }
  },
  "permission": {
    "read": "allow",
    "webfetch": "allow",
    "bash": "ask"
  }
}
